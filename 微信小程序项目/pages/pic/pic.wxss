.concert-list {
  display: flex;
  justify-content: center;
  /* background-color: rgb(212, 170, 170); */
  border-radius: 12px;
  margin-top: 36px;
  margin-bottom: 12px;
}

.concert-text {
  font-size: 24px;
  font-weight: bolder;
  /* margin: 6px 36px; */
  background-color: pink;
  /* background: linear-gradient(to right, black, rgb(202, 30, 30)); */
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-family: Songti, "Algerian", sans-serif;
  /* text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2), 0 0 10px pink; */
}

.person-list {
  margin: 15%;
  width: 300px;
  height: 39px;
  display: flex;
  justify-content: center;
  margin-top: 36px; 
  /* background-color: rgb(212, 170, 170); */
  border-radius: 12px;
  margin-bottom: 12px;
}

.person-text {
  font-size: 26px;
  font-weight: bolder;
  margin: 4px 6px;
  background-color: pink;
  /* background: linear-gradient(to right, rgb(156, 8, 8), black); */
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 10px;
  font-family: Songti, "华文宋体", sans-serif;
}

.top {
  display: flex;
  justify-content: center;
  /* margin-top: 12px;  */
  /* background-color: #CCCCCC; */
  border-radius: 4px;
}

.person-top {
  font-size: 12px;
  font-weight: bolder;
  margin: 5px 6px;
  text-shadow: 2px 1px 2px pink;
  background: linear-gradient(to right, rgb(121, 8, 64), rgb(13, 124, 40));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  /* margin-bottom: 8px; */
  font-family: Songti, "Impact", sans-serif;
}

.image-container {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

.extra-image {
  width: 360px;
  height: 200px; 
  object-fit: cover;
  border-radius: 12px;
  margin-bottom: 24px;
}
