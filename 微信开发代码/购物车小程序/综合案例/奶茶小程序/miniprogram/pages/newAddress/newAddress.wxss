@import "../../lib/weui.wxss";
.section__title{
  padding: 13px;
}
.picker{
    padding: 13px;
    background-color: #FFFFFF;
}
#detailAddress{
  background: #fff;
  width: 100%;
  height: 150px;
  padding: 13px;
}
.user_info{
  display: flex;
  height: 50px;
  background: #fff;
  margin: 13px 0 0;
  justify-content: space-between;
  align-items: center;
  padding: 0 13px;
}
.user_info_name_box{
  display: flex;
  align-items: center;
}
.user_info_name{
  margin-right: 10px;
  width: 55px;
}
.user_info_name_input{
  border-bottom: 1px solid rgba(100,100,100,.2);
}
.user_info_name_input input{
  height: 35px;
}
.user_info_gender{
  display: flex;
  align-items: center;
  flex-direction: row;
}
.user_info_gender_item{
  margin-left: 10px;
  /* width: 55px; */
  display: flex;
  align-items: center;
}
.user_info_gender_item #man,
.user_info_gender_item #woman{
  transform: scale(.8);
}
.user_phone{
  display: flex;
  padding: 0 13px;
  height: 50px;
  align-items: center;
  background: #fff;
}
.user_phone view{
  width: 55px;
}
.user_phone input{
  margin-left: 10px;
}

.preservation_btn{
  width: 95%;
  background: #0f0;
  color: #fff;
  margin-top: 13px;
}