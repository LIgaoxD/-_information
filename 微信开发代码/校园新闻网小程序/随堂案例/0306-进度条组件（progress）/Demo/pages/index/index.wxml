<!-- progress -->
<!-- 指定进度 -->
<view class="box">
  <progress percent="20"/>
</view>
<!-- 显示进度信息 -->
<view class="box">
  <progress percent="30" show-info font-size="20px"/>
</view>
<!-- 添加动画 -->
<view class="box">
  <progress percent="40" active/>
</view>
<!-- 自定义已选择进度颜色 -->
<view class="box">
  <progress percent="50" color="#10AEFF"/>
</view>
<!-- 自定义未选择进度颜色 -->
<view class="box">
  <progress percent="60" backgroundColor="#10AEFF" />
</view>
<!-- 自定义宽度 -->
<view class="box">
  <progress percent="70" active stroke-width="20"/>
</view>
<!-- 设置圆角 -->
<view class="box">
  <progress percent="80" active stroke-width="20" border-radius="20px"/>
</view>