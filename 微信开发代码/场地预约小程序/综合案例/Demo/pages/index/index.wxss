.swiper-img{
	width: 100%;
	height:150px;
}
.icon-box{
	display: flex;
	justify-content: space-around;
	margin-top: 10px ;
	padding-bottom: 10px;
	text-align: center;
	border-bottom: 2px solid #ccc;
}
.icon-img{
	width: 50px;
	height: 50px;
	border-radius: 50%;
}
.activity-box{
	padding:10px 5px;
}
.activity-title{
	font-size: 25px;
	font-weight: bold;
}
.activity-item{
	margin:5px 0;
	padding:7px;
	background-color: #fff;
	border-radius: 10px;
	color: #999;
	display:flex;
	justify-content: start;
	align-items: center;
}
.activity-img{
	width: 100px;
	height: 100px;
	border-radius: 12px;
	flex-shrink:0;
	margin-right: 10px;
}
.activity-item-title{
	font-size: 20px;
	font-weight: bold;
	color: #000;
}