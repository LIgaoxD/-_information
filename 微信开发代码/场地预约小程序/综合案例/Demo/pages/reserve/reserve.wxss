.container{
}
.top{
	display: flex;
	justify-content: space-around;
	padding:0 10px;
	font-size: 20px;
	border-bottom:2px solid #ccc;
}
.top-item{
	padding:10px;
	flex:1;
	text-align: center;
}
.active{
	color: #1296db;
	border-bottom:2px solid #1296db;
}
.activity-title{
	font-size: 25px;
	font-weight: bold;
}
.activity-item{
	margin:5px 0;
	padding:7px;
	background-color: #fff;
	border-radius: 10px;
	color: #999;
	display:flex;
	justify-content: start;
	align-items: center;
	position: relative;
}
.activity-img{
	width: 100px;
	height: 100px;
	border-radius: 12px;
	flex-shrink:0;
	margin-right: 10px;
}
.activity-item-title{
	font-size: 20px;
	font-weight: bold;
	color: #000;
}
.btn{
	width:55px;
	height:20px ;
	font-size: 15px;
	border:1px solid #1296db;
	color:#1296db;
	border-radius: 30px;
	line-height: 20px;
	background-color: #d2e9ff;
	text-align: center;
	position: absolute;
	right:10px ;
	bottom: 10px;
}