page {
	width: 100%;
	height: 100%;
}
.container {
	height: 100%;
	width: 100%;
	display: flex;
}

/* 题目 */

.question {
	width: 100%;
	height: 10%;
	background: #f0efef;
	color: blue;
	display: flex;
	justify-content: center;
	align-items: center;
}

/* 画板 */

.container .palette {
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	box-shadow: 2rpx 5rpx 2rpx silver;
}

/* 按钮 */

.container .option-panel {
	padding-bottom: 10rpx;
	font-size: 1em;
	text-align: center;
	background: #f0efef;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.option-panel .option-row {
	width: 100%;
	margin: 30rpx 0;
	width: 80%;
	height: 90rpx;
	display: flex;
	justify-content: space-around;
	flex-direction: row;
	align-items: center;
}
/* 颜色按钮 */
.color-btn {
	display: inline-block;
	width: 90rpx;
	height: 100%;
	margin: 0 10rpx 0 10rpx;
}
/* 操作按钮 */
.operate-btn {
	width: 60rpx;
	height: 60rpx;
	margin: 30rpx;
}
/* 保存按钮 */
.share-btn {
	width: 94%;
	padding: 0 0 0 0;
	left: 50%;
	margin-left: -47%;
}

/*----------------------------------------------------------------------*/

canvas {
	background: black;
	width: 100%;
	height: 100%;
	border: 1rpx solid #ebebeb;
	border-radius: 3rpx;
}
